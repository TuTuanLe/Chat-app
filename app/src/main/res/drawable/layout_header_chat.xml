<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:bottom="28dp"
        android:left="-40dp"
        android:right="-30dp"
        android:top="-80dp"
        >
        <rotate android:fromDegrees="-7">
            <shape android:shape="rectangle">

                <gradient
                    android:startColor="#279BCC"
                    android:centerColor="#21B2BF"
                    android:endColor="#17CCB4"
                    android:type="linear" />

                <stroke
                    android:width="1dip"
                    android:color="#E3DFDF" >
                </stroke>

            </shape>
        </rotate>
    </item>





</layer-list>


