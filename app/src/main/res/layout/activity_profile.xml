<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="@dimen/_14sdp"
    android:scrollbars="none"
    tools:context=".activities.ProfileActivity"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageBack"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"

                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Update Profile"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:id="@+id/layoutImage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center"
                    android:id="@+id/imageProfile"
                    android:background="@drawable/background_image"
                    android:scaleType="fitXY"
                    app:riv_oval="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="bottom|center"
                    android:text="Change avatar"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="@font/roboto_light"
                    />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:text="Change your avatar"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_15sdp" />
                <TextView
                    android:layout_width="@dimen/_168sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/trust_your_feelings_be_a_good_human_beings"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/roboto_light"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:background="@drawable/text_box_outline"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >

            <FrameLayout
                android:layout_width="@dimen/_55sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_box_area"

                >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_baseline_drive_file_rename_outline_24"
                    app:tint="@color/colorTextPrimary" />
            </FrameLayout>
            <EditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_60sdp"
                android:background="@color/trans"
                android:hint="@string/name"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/primary_text"
                android:fontFamily="@font/roboto_light"
                android:textSize="@dimen/_13ssp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                />

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/text_box_outline"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >

            <FrameLayout
                android:layout_width="@dimen/_55sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_box_area"

                >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_baseline_password_24"
                    app:tint="@color/colorTextPrimary" />
            </FrameLayout>

            <EditText
                android:layout_marginStart="@dimen/_60sdp"
                android:id="@+id/inputCurrentPassword"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:hint="Current Password"
                android:fontFamily="@font/roboto_light"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_13ssp"
                android:background="@color/trans"
            />
            <ImageView
                android:id="@+id/passwordHintCurrent"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/eye"
                android:padding="@dimen/_13sdp"
                android:layout_gravity="end"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/text_box_outline"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >

            <FrameLayout
                android:layout_width="@dimen/_55sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_box_area"

                >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_baseline_password_24"
                    app:tint="@color/blue" />
            </FrameLayout>


            <EditText
                android:layout_marginStart="@dimen/_60sdp"
                android:id="@+id/inputNewPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="New Password"
                android:fontFamily="@font/roboto_light"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:layout_marginEnd="@dimen/_40sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_13ssp"
                android:background="@color/trans"
             />
            <ImageView
                android:id="@+id/passwordHintNew"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/eye"
                android:padding="@dimen/_13sdp"
                android:layout_gravity="end"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/text_box_outline"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >

            <FrameLayout
                android:layout_width="@dimen/_55sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_box_area"

                >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_baseline_confirmation_number_24"
                    app:tint="@color/colorTextPrimary" />
            </FrameLayout>



            <EditText
                android:layout_marginStart="@dimen/_60sdp"
                android:id="@+id/inputConfirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="@string/confirm_password"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:fontFamily="@font/roboto_light"
                android:inputType="textPassword"
                android:layout_marginEnd="@dimen/_40sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_13ssp"
                android:background="@color/trans"
                />
            <ImageView
                android:id="@+id/passwordHintConfirm"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/eye"
                android:padding="@dimen/_13sdp"
                android:layout_gravity="end"
                />
        </FrameLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/text_box_outline"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >

            <FrameLayout
                android:layout_width="@dimen/_55sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_box_area"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="+84"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@color/trans"
                    android:contentDescription="@string/app_name"
                    android:paddingEnd="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_expand_more_24"
                    app:tint="@color/colorTextPrimary" />
            </FrameLayout>




            <EditText
                android:layout_marginStart="@dimen/_60sdp"
                android:id="@+id/inputNumberPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="Number phone"
                android:fontFamily="@font/roboto_light"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_13ssp"
                android:background="@color/trans"
                android:layout_marginHorizontal="@dimen/_10sdp"/>
        </FrameLayout>






        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:animateLayoutChanges="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"

                android:backgroundTint="#28A5C6"
                android:text="Update"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:visibility="invisible"
                />
        </FrameLayout>


    </LinearLayout>



</ScrollView>